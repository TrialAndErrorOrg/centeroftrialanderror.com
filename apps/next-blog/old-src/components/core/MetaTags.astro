---
import { AstroSeo } from '@astrolib/seo'
import { getImage } from '@astrojs/image'
import { getRelativeUrlByFilePath } from '../../utils/directories'

import defaultImageSrc from '../../assets/images/default.png'

import { SITE } from '../../config.mjs'
import Fonts from '../atoms/Fonts.astro'
import ExtraMetaTags from '../atoms/ExtraMetaTags.astro'
import { getAcademicMetaTags } from './getAcademicTags'
import type { BlogPost } from '../../utils/types'

const { src: defaultImage } = await getImage({
  src: defaultImageSrc,
  width: 1200,
  height: 628,
})

export interface Meta {
  title: string
  description: string
  image?: string
  canonical?: string
  noindex?: boolean
  nofollow?: boolean
  ogType?: string
  ogTitle?: string
  post?: BlogPost
}

interface Props extends Meta {}

const {
  title = SITE.name,
  description = '',
  image = 'https://cote.azureedge.net/cote-strapi-uploads/assets/Twitter_Card_9743a9fcb2.png',
  canonical,
  noindex = false,
  nofollow = false,
  ogTitle = title,
  ogType = 'website',
  post = null,
} = Astro.props

// const image =
//   typeof _image === 'string'
//     ? new URL(_image, Astro.site)
//     : _image && typeof _image['src'] !== 'undefined'
//     ? new URL(getRelativeUrlByFilePath(_image.src), Astro.site)
//     :
---

<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />

<AstroSeo
  title={title}
  description={description}
  canonical={canonical}
  noindex={noindex}
  nofollow={nofollow}
  openGraph={{
    url: canonical,
    title: ogTitle,
    description: description,
    type: ogType,
    images: image
      ? [
          {
            url: image?.toString(),
            alt: ogTitle,
          },
        ]
      : undefined,
    site_name: 'A Blog of Trial &amp; Error',
  }}
  twitter={{
    handle: '@jtrialerror',
    site: 'https://journal.trialanderror.org',
    cardType: image ? 'summary_large_image' : undefined,
  }}
  additionalMetaTags={post ? getAcademicMetaTags(post) : []}
/>

<Fonts />

<ExtraMetaTags />
