---
interface Props {
  bg?: string
  borderColor?: string
  borderRadius?: string
  borderWidth?: string
  color?: string
  zIndex?: number
}

const {
  bg = 'white',
  borderColor = 'black',
  borderRadius = 'xl',
  borderWidth = '4',
  color = 'black',
  zIndex = '50',
} = Astro.props
---

<span class="flex flex-col relative z-50">
  <span
    class={`bg-${bg} w-max border-4 lg:border-2 lg:border-b-0 border-b-0 z-50 relative p-2 lg:pt-6 md:px-4 lg:px-8 pb-0 lg:pb-0 border-black rounded-xl rounded-b-none shadow-[8px_-8px_0px_0px_#000]`}
    >A Blog of</span
  >
  <span
    class="bg-white w-max border-4 border-black lg:border-2 lg:-mt-1 -mt-1 p-2 md:px-4 lg:px-8 relative shadow-[8px_-8px_0px_0px_#000] rounded-xl rounded-tl-none"
  >
    Trial & Error.
  </span>
</span>
