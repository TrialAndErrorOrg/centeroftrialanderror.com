---
import type { Meta } from '../components/core/MetaTags.astro'
import Layout from './PageLayout.astro'

interface Props {
  meta: Meta
}
const { meta } = Astro.props
---

<Layout meta={meta}>
  <section class="px-6 sm:px-6 py-12 sm:py-16 lg:py-20 mx-auto">
    <header>
      <h1
        class="text-center text-4xl md:text-5xl font-bold leading-tighter tracking-tighter mb-8 md:mb-16 font-heading"
      >
        <slot name="title" />
      </h1>
    </header>
    <slot />
  </section>
</Layout>
