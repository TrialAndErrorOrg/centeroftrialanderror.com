{
  "extends": [
    "plugin:@nrwl/nx/react-typescript",
    "next",
    "next/core-web-vitals",
    "../../.eslintrc.json"
  ],
  "ignorePatterns": [
    "**/katexSlatePlugin.tsx",
    "!**/*",
    "**/katexSlatePlugin.tsx"
  ],
  "overrides": [
    {
      "files": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"],
      "excludedFiles": ["*.js"],
      "parserOptions": {
        "project": "apps/frontend/tsconfig.json"
      },
      "rules": {
        "@next/next/no-html-link-for-pages": ["error", "apps/frontend/pages"]
      }
    },
    {
      "files": ["**/*.ts", "**/*.tsx"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {}
    }
  ],
  "env": {
    "jest": true
  }
}
